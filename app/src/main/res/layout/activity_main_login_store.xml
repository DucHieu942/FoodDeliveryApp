<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainLogin">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="316dp"
        android:layout_height="400dp"
        android:background="@drawable/logoapp"
        android:orientation="vertical"
        android:padding="10dp"
        app:circularflow_radiusInDP="0,6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577">

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Welcome to Cuckoo Kitchen !"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="#2FF403"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="sans" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background_shape">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_shape"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_shape"
                    android:drawablePadding="5dp"
                    android:hint="Username"
                    android:paddingStart="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background_shape">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_shape"
                app:srcCompat="@drawable/ic_baseline_lock_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/background_shape"
                    android:drawablePadding="5dp"
                    android:hint="Password"
                    android:inputType="text|textPassword"
                    android:paddingStart="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

        </TableRow>

        <Button
            android:id="@+id/btnShipper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/cardview_compat_inset_shadow"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_shape"
            android:text="Login" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageLogoLogin"
        android:layout_width="310dp"
        android:layout_height="115dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548"
        app:srcCompat="@drawable/logocuckoo_removebg_preview" />

    <Button
        android:id="@+id/selectRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Role"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout"
        app:layout_constraintVertical_bias="0.195" />

</androidx.constraintlayout.widget.ConstraintLayout>